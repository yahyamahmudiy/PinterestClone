<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".Fragment.DetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_layout_white">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_layout_top_corner">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_launcher_background"
                            app:shapeAppearanceOverlay="@style/topcorner" />

                        <ImageView
                            android:id="@+id/iv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="20sp"
                            android:src="@drawable/ic_more_white" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_margin="20sp"
                            android:src="@drawable/ic_zoom"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_1"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center_vertical"
                            app:shapeAppearanceOverlay="@style/circle"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="@integer/material_motion_duration_long_1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yahya Mahmudiy"
                                android:textColor="#000000"
                                android:textSize="17sp"/>
                            <TextView
                                android:id="@+id/tv_followers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9.3k Followers"
                                android:textColor="#90000000"
                                android:textSize="17sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Follow"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:background="@drawable/round_shape_gray"
                            android:padding="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="40dp"
                        android:text="Najot Ta'lim markazi ilm talabi va rivojlanish istagida bo'lgan yoshlarning o'sishlari uchun doimo yordam berishga harakat qilib keladi"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_alt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#90000000"
                        android:textSize="17sp"
                        android:layout_marginTop="15dp"
                        android:text="Najot Ta'lim markazi ilm talabi va rivojlanish istagida bo'lgan yoshlarning o'sishlari uchun doimo yordam berishga harakat qilib keladi"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="30dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:lottie_autoPlay="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/visit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visit"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:layout_marginEnd="2.5dp"
                                android:background="@drawable/round_shape_gray"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/tv_save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:textColor="#ffffff"
                                android:layout_marginStart="2.5dp"
                                android:textSize="20sp"
                                android:background="@drawable/round_shape_red"
                                android:padding="10dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/ic_share"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/shape_layout_white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comments"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Love this Pin? Let "
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/tv_username_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yahya Mahmudiy"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" know!"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="20dp">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_profile_comments"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_1"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:shapeAppearanceOverlay="@style/circle"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginStart="10dp"
                            android:hint="Add a comment"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_layout_white"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="50dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="More like this"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:src="@drawable/ic_arrow"/>
    </FrameLayout>

</LinearLayout>